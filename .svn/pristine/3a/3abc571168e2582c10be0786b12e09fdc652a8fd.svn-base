

.col-xs-15, .col-sm-15, .col-md-15, .col-lg-15 {
    position: relative;
    min-height: 1px;
    padding-right: 10px;
    padding-left: 10px;
    box-sizing: border-box;
  }
  .col-xs-6 {
    width: 50%;
    float: left;
  }
@mixin clear(){
  display:block;
  content: '';
  clear: both;
}
/*--------pic------*/
.pic{
   width:100%;
   overflow: hidden;
   &:after{
     @include clear();
   }
  .pic-box{
       width:100%;
       position:relative;
      &:after{
         display: block;
         content: '';
         clear: both;
        }
      .pic-list{
        width:700%;
        position:relative;
        left:0;
        top:0;
        &:after{
           @include clear();
          }
        li{
            display: inline-block;
            width:14.285714%;
            float: left;
          img{
              display: block;
              width:100%;
            }
          }
      }
    .pic-icon{
        position:absolute;
        bottom:5px;
        right:5%;
        width:100%;
        z-index:2;
        text-align: right;
      li{
          margin: 0 6px;
          width: 11px;
          height: 11px;
          display: inline-block;
          text-align: left;
          background: rgba(255,255,255,0.5);
          cursor: pointer;
          border-radius: 20px;
          box-shadow: inset 0 0 3px rgba(0,0,0,0.3);
        }
      li.active{
          background: rgba(255,255,255,1);
        }
      }
    .btn1{
        width: 40px;
        height: 40px;
        border-radius: 40px;
        margin-top: -20px;
        position: absolute;
        top: 50%;
        z-index: 99;
        overflow: hidden;
        font:700 20px/40px "宋体";
        text-align: center;
        cursor: pointer;
        background: rgba(0,0,0,0.3);
        text-shadow: 1px 1px 0 rgba(255,255,255,0.3);
        color:#fff;
        display: none;
      &:hover{
          background: rgba(0,0,0,0.6);
        }
      }
    .pic-left-btn{
        left:10px;
      }
      .pic-right-btn{
        right:10px;
      }
    #spic{
      display: none;
    }
    }


}

@media (max-width: 767px){
  #spic{
    display: block;
  }
  #bpic{
    display: none;
  }
}
//pro
.center{
  text-align: center;
  box-sizing: border-box;
  .row {
      margin-left: -15px;
      margin-right: -15px;
      box-sizing: border-box;
    &:before, &:after {
        clear: both;
        content: " ";
        display: table;
      }
     a{
        color: #4a8937;
      }
    .product-category-link {
        color: #838383;
        font-size: 12px;
      }
    .img-responsive {
      display: block;
      max-width: 100%;
      height: auto;
    }
    .front-page-product-set-image-container {
        position: relative;
      .img-responsive {
        display: block;
        max-width: 100%;
        height: auto;
      }

      }
      form {
        display: inline-block;
        position: absolute;
        bottom: 20px;
        right: 20px;
        .shopping-cart-button {
          border: none;
          height: 35px;
          width: 35px;
          background: url(images/cart3.png) no-repeat;
          cursor: pointer;
          &:hover{
            background: url(images/cart2.png) no-repeat;
          }

      }
      }
    .chinese-name {
          display: inline;
        .product-set-link {
            display: inline;
            color: #838383;
            font-size: 14px;
          }
        .size{
            padding-left: 2px;
            font-size: 12px;
            color: #b5b5b6;
            font-style:normal;
          }
         .size-and-price {
          padding-left: 2px;
          font-size: 12px;
          color: #b5b5b6;
        }
      }


    .front-page-header {
        margin-top: 20px;
        margin-bottom: 15px;
        text-align: left;
        color: #249136;
       .caret {
          display: inline-block;
          width: 0;
          height: 0;
          margin-left: 2px;
          vertical-align: middle;
          border-top: 4px solid;
          border-right: 4px solid transparent;
          border-left: 4px solid transparent;
        }
      .caret-right {
          border-left: 4px solid black;
          border-right: 0;
          border-top: 4px solid transparent;
          border-bottom: 4px solid transparent;
        }
      }
    }
}
